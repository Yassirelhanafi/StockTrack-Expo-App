{
  "expo": {
    "name": "StockTrack",
    "slug": "stocktrack-expo-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/stockwatch_white.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.stocktrack",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan product QR codes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/stockwatch_white.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.stocktrack",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./src/assets/images/stockwatch_white.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ],
    "scheme": "stocktrack",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "cdf3927f-da9c-40e9-8902-43446048da67"
      },
      "firebaseApiKey": "AIzaSyBvMZSiXMhbBSYWzMV0VUA4qhoeu0UCNVU",
      "firebaseAuthDomain": "stocktrack-expo-app.firebaseapp.com",
      "firebaseProjectId": "stocktrack-expo-app",
      "firebaseStorageBucket": "stocktrack-expo-app.firebasestorage.app",
      "firebaseMessagingSenderId": "1081577006078",
      "firebaseAppId": "1:1081577006078:web:0c7da72ddb4e26f08196af"
    },
    "owner": "yassirelhanafi"
  }
}
