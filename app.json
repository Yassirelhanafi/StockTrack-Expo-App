{
  "expo": {
    "name": "StockTrack",
    "slug": "stocktrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/stockwatch_white.png",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.stocktrack",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan product QR codes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/stockwatch_white.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.stocktrack",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.USE_EXACT_ALARM"
      ],

      "notification": {
        "icon": "./src/assets/images/stockwatch_white.png",
        "color": "#ffffff",
        "defaultChannel": "default",
        "sounds": ["./src/assets/alert-85101.mp3"],
        "androidMode": "default",
        "androidCollapsedTitle": "Stock Alert"
      }
    },
    "web": {
      "favicon": "./src/assets/images/stockwatch_white.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-audio",
      [
        "expo-background-fetch",
        {
          "backgroundModes": ["background-fetch", "background-processing"]
        }
      ],
      [
        "expo-task-manager"
      ]
    ],
    "scheme": "stocktrack",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "abc15ad7-ea1f-4326-a4c0-12a973079e01"
      },
      "firebaseApiKey": "AIzaSyDiK1Jxh3hCyaAADOkwELbUbH7EttnfHpk",
      "firebaseAuthDomain": "stockwatch-34392.firebaseapp.com",
      "firebaseProjectId": "stockwatch-34392",
      "firebaseStorageBucket": "stockwatch-34392.firebasestorage.app",
      "firebaseMessagingSenderId": "656657068489",
      "firebaseAppId": "1:656657068489:web:46b42fb4144d7cb2413818"
    },
    "owner": "yassirhanafih"
  }
}
