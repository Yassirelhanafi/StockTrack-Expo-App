{
  "expo": {
    "name": "StockTrack",
    "slug": "stocktrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
       "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan product QR codes."
      },
       "bundleIdentifier": "com.yourcompany.stocktrack"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
       "permissions": [
        "android.permission.CAMERA"
      ],
      "package": "com.yourcompany.stocktrack"
    },
    "web": {
      "favicon": "./assets/favicon.png",
       "bundler": "metro"
    },
     "plugins": [
      "expo-router"
    ],
    "scheme": "stocktrack",
     "extra": {
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      },
       "firebaseApiKey": "YOUR_API_KEY",
       "firebaseAuthDomain": "YOUR_PROJECT_ID.firebaseapp.com",
       "firebaseProjectId": "YOUR_PROJECT_ID",
       "firebaseStorageBucket": "YOUR_PROJECT_ID.appspot.com",
       "firebaseMessagingSenderId": "YOUR_SENDER_ID",
       "firebaseAppId": "YOUR_APP_ID"
    },
    "owner": "your-expo-username"
  }
}
